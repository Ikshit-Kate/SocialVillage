
<% if @comment.persisted? %>
  // Append the newly created comment to the comments list
  var commentList = document.getElementById("comments-list");
  var listItem = document.createElement("li");
  listItem.innerHTML = "<strong><%= @comment.user.username %></strong> - <%= @comment.created_at.to_date %><br><p><%= @comment.body %></p>";
  commentList.appendChild(listItem);

  // Clear the comment form after successful creation
  document.querySelector("form").reset();
<% else %>
  // Handle error or display a message if needed
<% end %>
