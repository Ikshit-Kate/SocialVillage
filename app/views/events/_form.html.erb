<%= stylesheet_link_tag 'custom_forms', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="form-wrapper">
  <%= form_with model: @event do |form| %>
    <div class="container">
      <div class="text">
        New Event
      </div>
      <div class="form-row">
        <div class="input-data">
          <%= form.label :event_name %>
          <%= form.text_field :event_name %>
          <div class="underline"></div>
        </div>
      </div>
      <div class="form-row">
        <div class="input-data">
          <%= form.label :caption %>
          <%= form.text_field :caption %>
          <div class="underline"></div>
        </div>
      </div>
      <div class="form-row">
        <div class="input-data">
          <%= form.label :images, "." %>
          <%= form.file_field :images, multiple: true %>
          <div class="underline"></div>
        </div>
      </div>
      <div class="form-row submit-btn">
        <div class="input-data">
          <div class="inner"></div>
          <%= form.submit "Submit" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
