<p><b>Event name:</b> <%= @event.event_name%></p>

<p><b>Caption:</b> <%= @event.caption%></p>

<% @event.images.each do |i|%>
    <%= image_tag(i, style: "width: 300px; height: auto")%>
<%end%>


<%if @event.user_id == current_user.id%>
 <br> <%= link_to "edit", edit_event_path%>
  <%= button_to "Delete", event_path, method: :delete %>
<%end%>

<h3>Leave a comment</h3>
<%= render 'comments/form' %>

<h3>Comments</h3>
<ul id="comments-list">
  <% @event.comments.each do |comment| %>
    <li>
      <strong><%= comment.user.username %></strong> - <%= time_ago_in_words(comment.created_at)%>
      <p><%= comment.comment %></p>

      <% if (comment.user == current_user || @event.user_id == current_user.id)%>
        <%= button_to "Delete", event_comment_path(@event, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
        <%if comment.user == current_user%>
          <%= link_to "Edit", edit_event_comment_path(@event, comment) %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
