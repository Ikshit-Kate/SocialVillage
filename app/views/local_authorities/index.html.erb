<%= link_to "Make New Entry", new_local_authority_path, class: "new-entry-link" if current_user.secretary? %><br><br>

<!DOCTYPE html>
<html>
    <head>
        <style>
            table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            }

            td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            }

            tr:nth-child(even) {
            background-color: #dddddd;
            }
        </style>
    </head>
    <body>
        <h2>Local Authorities</h2>
        <table>
            <tr>
                <th>Department</th>
                <th>Name</th>
                <th>SOS</th>
            </tr>
            <% @local_authorities.each do |authority|%> 
            <tr>
                <td><%= authority.department%></td>
                <td><%= link_to authority.name, authority%></td>
                <td>
                    <%= button_to 'SOS', sos_path, method: :post, params:{email: authority.email}, class: "delete-button" %>
                </td>
            </tr>
            <%end%> 

        </table>
    </body>
</html>

