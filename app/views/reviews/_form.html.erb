<%= form_for([@business, review], remote: true) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  
  <div class="field">
    <%= f.label :review_body %>
    <%= f.text_area :review_body, rows: 4 %>
  </div>

  <%= f.submit 'Submit Review', class: 'button is-primary' %>
<% end %>